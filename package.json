{
  "name": "eck-autocomplete",
  "version": "0.0.1",
  "description": "Autocomplete web component. Suggests options for an input.",
  "author": "Leon Eck",
  "license": "MIT",
  "type": "module",
  "main": "eck-autocomplete.js",
  "module": "eck-autocomplete.js",
  "scripts": {
    "start": "concurrently -r \"npm run watch-library\" \"npm run watch-showcase\"",
    "watch-showcase": "vite",
    "watch-library": "node scripts/esbuild-library-watch.mjs",
    "build-library": "node scripts/esbuild-library-build.mjs",
    "build-showcase": "vite build --outDir www --target esnext --sourcemap",
    "generate-type-declarations": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "generate-package-metadata": "node scripts/generate-package-metadata.mjs",
    "bundle-package": "npm run build-library && npm run generate-type-declarations && npm run generate-package-metadata && cd dist && npm pack",
    "type-check": "tsc --noEmit",
    "prettier": "prettier --ignore-path .gitignore --write .",
    "prettier-check": "prettier --ignore-path .gitignore --check .",
    "eslint-check": "eslint --ignore-path .gitignore --max-warnings 0 .",
    "stylelint-check": "stylelint --ignore-path .gitignore **/*.css",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "concurrently": "7.0.0",
    "esbuild": "0.14.14",
    "eslint": "8.8.0",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "stylelint": "14.3.0",
    "stylelint-config-standard": "24.0.0",
    "typescript": "4.5.5",
    "vite": "2.7.10"
  }
}
