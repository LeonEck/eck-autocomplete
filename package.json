{
  "name": "eck-autocomplete",
  "version": "0.0.1",
  "description": "Autocomplete web component. Suggests options for an input.",
  "author": "Leon Eck",
  "license": "MIT",
  "type": "module",
  "main": "eck-autocomplete.js",
  "module": "eck-autocomplete.js",
  "engines": {
    "node": ">=16.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeonEck/eck-autocomplete.git"
  },
  "scripts": {
    "start": "concurrently -r npm:watch:*",
    "watch:library": "node scripts/esbuild-library-watch.mjs",
    "watch:showcase": "vite",
    "build:library": "node scripts/esbuild-library-build.mjs",
    "build:showcase": "vite build --outDir www --target esnext --sourcemap",
    "generate:type-declarations": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "generate:package-metadata": "node scripts/generate-package-metadata.mjs",
    "bundle:library": "npm run build:library && npm run generate:type-declarations && npm run generate:package-metadata && cd dist && npm pack",
    "check:types": "tsc --noEmit",
    "check:eslint": "eslint --ignore-path .gitignore --max-warnings 0 .",
    "check:stylelint": "stylelint --ignore-path .gitignore **/*.css",
    "check:prettier": "prettier --ignore-path .gitignore --check .",
    "fix:prettier": "prettier --ignore-path .gitignore --write .",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.10.1",
    "@typescript-eslint/parser": "5.10.1",
    "concurrently": "7.0.0",
    "esbuild": "0.14.14",
    "eslint": "8.8.0",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "stylelint": "14.3.0",
    "stylelint-config-standard": "24.0.0",
    "typescript": "4.5.5",
    "vite": "2.7.10"
  }
}
