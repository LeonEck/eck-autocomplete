{
  "name": "eck-autocomplete",
  "version": "0.0.6",
  "description": "Autocomplete web component. Suggests options for an input.",
  "author": "Leon Eck",
  "license": "MIT",
  "engines": {
    "node": "^16.13.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeonEck/eck-autocomplete.git"
  },
  "homepage": "https://leoneck.github.io/eck-autocomplete/",
  "scripts": {
    "start": "concurrently -r npm:watch:*",
    "watch:library": "node scripts/esbuild-library-watch.mjs",
    "watch:showcase": "vite --host 0.0.0.0",
    "build:library": "node scripts/esbuild-library-production-build.mjs",
    "build:showcase": "npm run build:library && vite build --outDir www --target esnext --sourcemap && node scripts/generate-cloudflare-pages-config.mjs",
    "generate:type-declarations": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "generate:package-metadata": "node scripts/generate-package-metadata.mjs",
    "bundle:library": "npm run build:library && npm run generate:type-declarations && npm run generate:package-metadata",
    "pack:library": "cd dist && npm pack",
    "publish:library": "npm run bundle:library && cd dist && npm publish",
    "check:types": "tsc --noEmit",
    "check:eslint": "eslint --ignore-path .gitignore --max-warnings 0 .",
    "check:stylelint": "stylelint --ignore-path .gitignore **/*.css",
    "check:prettier": "prettier --ignore-path .gitignore --check .",
    "fix:prettier": "prettier --ignore-path .gitignore --write .",
    "test:e2e": "start-server-and-test test:e2e:start http-get://localhost:3000 test:e2e:cypress:run",
    "test:e2e:start": "npm run build:library && npm run watch:showcase",
    "test:e2e:cypress:open": "cypress open",
    "test:e2e:cypress:run": "cypress run",
    "test:e2e:ci:cypress:install": "npm ci --ignore-scripts && npm explore cypress -- npm run postinstall",
    "test:unit": "vitest run",
    "test:unit:vitest:watch": "vitest",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "16.1.0",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "concurrently": "7.0.0",
    "cypress": "9.4.1",
    "esbuild": "0.14.21",
    "eslint": "8.8.0",
    "eslint-plugin-cypress": "2.12.1",
    "happy-dom": "2.31.1",
    "html-minifier": "4.0.0",
    "husky": "7.0.4",
    "prettier": "2.5.1",
    "start-server-and-test": "1.14.0",
    "stylelint": "14.5.0",
    "stylelint-config-standard": "25.0.0",
    "typescript": "4.5.5",
    "vite": "2.8.1",
    "vitest": "0.3.2"
  }
}
